<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PottyAppNew.Views.ChildPage"
             Title="Barn"
             Shell.BackgroundColor="SlateGrey"
             BackgroundColor="FloralWhite">
    <ScrollView>
    <VerticalStackLayout>
        <Grid
            ColumnDefinitions="*,*,*">
            <Button 
                Grid.Column="3"
                Text="Lägg till barn"
                Clicked="OnClickedGoToAddChildPage"
                BackgroundColor="SlateGrey"/>
        </Grid>
        <Image
                Source="pooandpee.png"
                SemanticProperties.Description="Poo and Pee emojis holding hands"
                HeightRequest="300"
                HorizontalOptions="Center"/>

        <Button
                Text="Media"
                Clicked="OnClickedGoToVideoPage"
                BackgroundColor="SlateGrey"/>
        <Button
                 Text="Gå på pottan"
                 Clicked="OnClickedGoToChildEventPage"
                 BackgroundColor="SlateGrey"/>
        <Button
                Text="Spel"
                Clicked="OnClickedGoToGamePage"
                BackgroundColor="SlateGrey"/>
        <Button
            Text="Tillbaka"
            Clicked="OnBackCLicked"
            BackgroundColor="SlateGrey"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>